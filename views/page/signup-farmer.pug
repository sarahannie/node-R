doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title U-Farm
  link(rel='stylesheet' href='../css/bootstrap/css/bootstrap.css')
  link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.0.8/css/all.css')
  link(rel='stylesheet' href='../css/signup-farmer.css')
  link#bootstrap-css(href='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' rel='stylesheet')
  script(src='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js')
.bg1
  .bg2
    article.card-body.mx-auto(style='max-width: 400px;')
      h4.card-title.mt-3.text-center Create Account
      p.text-center Let Work Together to Make Earning Easier
      form#regform(action='/signupfarmer' name='register' onsubmit='return validation(event);' method='post')
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i.fa.fa-user
          input#fullName.form-control(name='fullname' placeholder='Full name' type='text')
          small#fnameErr
        // form-group//
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i.fa.fa-envelope
          input#email.form-control(name='email' placeholder='Email address' type='email')
          small#emailErr
        // form-group//
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i D.O.R
          input#dor.form-control(name='dor' placeholder='Date Of Registeration' type='date' readonly='')
        // form-group//
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i D.O.B
          input#dob.form-control(name='dob' placeholder='Date Of Birth' type='date')
          small#dobErr
        // form-group//
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i NIN
          input#nin.form-control(name='nin' placeholder='NIN Number' type='text')
          small#ninErr
        // form-group//
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i Unique
          input#unique.form-control(name='unique' placeholder='FO-0984' type='text')
          small#uniqueErr
        // form-group//
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i Gender 
          label.label2  &nbsp;
            input#gmale.gender(name='gender' type='radio' value='male')
            span Male
          label
            input#gfemale.gender(name='gender' type='radio' value='female')
            span Female
            small#gfemaleErr
        // form-group//
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i.fa.fa-phone
          select#country-code.custom-select(style='max-width: 120px;' name="countryCode")
            option(value='+256' selected name="countryCode" ) +256
            option(value='+254' name="countryCode") +254
            option(value='+255' name="countryCode") +255
            option(value='+234' name="countryCode") +234 
          input#phoneInput.form-control(name='phone' placeholder='Phone number' type='text')
          small#phonenumErr
        // form-group//
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i Ward
          input#ward.form-control(name='ward' placeholder='Ward Name' type='text')
          small#wardErr
        // form-group//
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i.fa.fa-building
          select#activities.form-control(name="role")
            option(selected='' )  Activites Undertaken
            option Crop Farming
            option Livestock Farming
            option Fruit Farming
            option seedline Farming
          small#activitiesErr
        // form-group end.//
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i.fa.fa-lock
          input#password.form-control(name="password" placeholder='Create password' type='password')
          small#passwordErr
        // form-group//
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i.fa.fa-lock
          input#repassword.form-control(name="repassword" placeholder='Repeat password' type='password')
          small#repasswordErr
        // form-group//
        .form-group
          button.btn.btn-color.btn-block(type='submit')  Create Account  
        // form-group//
        p.text-center
          | Have an account? 
          a.login(href='/signin') Log In
script(src='../js/signup-farmers.js')
script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
script(src='../css/bootstrap/js/bootstrap.js')
