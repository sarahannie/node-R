title U-Farm
div(w3-include-html="/includes/sidebar.html")
// Container Main start
.height-100.bg-light
  .bg2
    article.card-body.mx-auto(style="max-width: 400px;")
      h4.card-title.mt-3.text-center Create Account
      p.text-center Let Work Together to Make Earning Easier
      form#regform(action="#", name="register", onsubmit="return validation(event);", method="POST")
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i.fa.fa-user
              |  
          input.form-control#fullName(name="fullName", placeholder="Full name", type="text")
          small#fnameErr
        //  form-group// 
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i.fa.fa-envelope
              |  
          input.form-control#email(name, placeholder="Email address", type="email")
          small#emailErr
        //  form-group// 
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i D.O.R
              |  
          input.form-control#dor(name, placeholder="Date Of Registeration", type="date", readonly)
        //  form-group// 
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i D.O.B
              |  
          input.form-control#dob(name, placeholder="Date Of Birth", type="date")
          small#dobErr
        //  form-group// 
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i NIN
              |  
          input.form-control#nin(name, placeholder="NIN Number", type="text")
          small#ninErr
        //  form-group// 
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i Unique
              |  
          input.form-control#unique(name, placeholder="AO-0984", type="text")
          small#uniqueErr
        //  form-group// 
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i Gender
              |  
          |    

          label.label2
            input.gender#gmale(name="gender", type="radio", value="male")
            span Male
          label
            input.gender#gfemale(name="gender", type="radio", value="female")
            span Female
            small#gfemaleErr
        //  form-group// 
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i.fa.fa-phone
              |  
          select.custom-select#country-code(style="max-width: 120px;")
            option(selected) +256
            option(value="1") +254
            option(value="2") +255
            option(value="3") +234
          input.form-control#phoneInput(name, placeholder="Phone number", type="text")
          small#phonenumErr
        //  form-group// 
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i Ward
              |  
          input.form-control#ward(name, placeholder="Ward Name", type="text")
          small#wardErr
        //  form-group// 
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i.fa.fa-building
              |  
          select#activities.form-control
            option(selected) Activites Undertaken
            option Crop Farming
            option Livestock Farming
            option Fruit Farming
            option seedline Farming
          small#activitiesErr
        //  form-group end.// 
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i.fa.fa-lock
              |  
          input.form-control#password(placeholder="Create password", type="password")
          small#passwordErr
        //  form-group// 
        .form-group.input-group
          .input-group-prepend
            span.input-group-text
              i.fa.fa-lock
              |  
          input.form-control#repassword(placeholder="Repeat password", type="password")
          small#repasswordErr
        //  form-group// 
        .form-group
          button.btn.btn-color.btn-block(type="submit") Create Account
        //  form-group// 
        p.text-center
          | Have an account? 
          a.login(href) Log In
