              th NIN
              th Unique 
              th Gender
              th Phone
              th Ward 
              th Role 
              th Action 
              th Action 
              th Status 
          tbody
            if register.length
              - var counts = 1
                each registers in register
                  tr
                    td #{counts}
                    td #{registers.fullname}
                    td #{registers.email}
                    td #{registers.dor}
                    td #{registers.dob}
                    td #{registers.nin}
                    td #{registers.unique}
                    td #{registers.gender}
                    td #{registers.phone}
                    td #{registers.ward}
                    td #{registers.role}
                    td
                      //- sending information to the backend through forms
                      form(method="post" action="/farmer/delete")
                          input(type="hidden", name="id", value=registers.id)
                          button.btn.btn-danger(type="submit") Delete
                    td 
                          a.btn.btn-dark.btn-block(href="/register-farmers-edit/"+registers.id) Edit
                    -  counts = counts + 1

            else 
                p no farmer has registered yet
