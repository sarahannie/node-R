// Container Main start
.height-100.bg-light
  .bg-cover
    //  card availble  
    .bg1
      .container
        .row
          each product in products
            .card1.plate.col-md-3.col-lg-4.col-10.mt-5
              img.card-img-top(src=product.image, width="50px", height="50px", alt="Item Image")
              .card-body1
                h5.card-title Item Name:#{product.name}
                p.card-text Item Description:#{product.description}
                ul.list-group.list-group-flush
                  li.list-group-item Quantity: #{product.quantity}
                  li.list-group-item Price: UGX #{product.price}
                form(method="post" action="/updating/delete")
                  input(type="hidden", name="id", value=product.id)   
                  button.btn.btn-dag( type="submit") Delete
                  a.btn.btn-pry(href=`/additing-edit/${product.id}`) Edit
           
              
// Container Main end
