    //  card availble  
    .bg1
      .container
        .row
          each product in products
            .card1.plate.col-md-3.col-lg-4.col-10.mt-5
              img.card-img-top(src=product.image, width="50px", height="50px", alt="Item Image")
              .card-body1
                h5.card-title Item Name:#{product.name}
                p.card-text Description:#{product.description}
                ul.list-group.list-group-flush
                  li.list-group-item Quantity: #{product.quantity}
                  li.list-group-item Price: UGX #{product.price}
                form(method="post" action="/updating/delete")
                  input(type="hidden", name="id", value=product.id)   
                  button.btn.btn-dag( type="submit") Delete
                  a.btn.btn-pry(href=`/additing-edit/${product.id}`) Edit
          
          
    // Adding item the item  
    .bg-cover
    .bg(style="margin-bottom: 90px;")
      .container
        h1 Add New Item
        form( action="/addproduct" name="product" style="margin-bottom: 30px;"  onsubmit='return validation(event);', method="post" enctype="multipart/form-data" )
          .form-group
            label(for="item-name") Item Name
            input#item-name.form-control(type="text",  placeholder="Enter Product name" name="name" )
          .form-group
            label(for="item-name") Ward
            input.form-control#ward(type="text",  placeholder="ward" name="ward" )
          .form-group
            span.input-group-text
              i Product type
            label.label2  &nbsp;
            input#organic(name='types' type='radio'  value='types')
            span Organic  &nbsp;
            label
            input#inorganic(name='types' type='radio'   value='types')
            span Non Organic
            span#org
          .form-group
            label(for="item-name") D.O.R
            input.form-control#dor(type="date",  placeholder=""  name="dor" )
          .form-group
            label(for="item-name") Address
            input.form-control#address(type="type", placeholder="Please enter address" name="address" )
          .form-group
            span.input-group-text
              i Mode of payment
            label.label2  &nbsp;
            input#pay(name='pay'  placeholder="Please enter your payment method" type='radio' value='pay')
            span Cash  &nbsp;
            label
            input#pay1(name='pay'  placeholder="Please enter your payment method" type='radio' value='pey')
            span Mobile money
            span#org1
          .form-group
            label(for="item-description") Item Description
            textarea.form-control#item-description(rows="3", name="description"  placeholder="Enter description in details" )
          .form-group
            label(for="item-quantity") Phone Number
            input.form-control#phone(type="tel", name="phone"  placeholder="Please enter your phone number"  )
          .form-group
            span.input-group-text
              i Mode of Delivery
            label.label2  &nbsp;
            input#delivery1(name='delivery' type='radio'  placeholder="pls delivery method" value='delivery')
            span Pickup &nbsp;
            label
            input#delivery(name='delivery' type='radio'  placeholder="pls delivery method" value='delivery')
            span Home Delivery
            span#org2
          .form-group
            label(for="item-quantity") Item Quantity
            input.form-control#item-quantity(type="number",  placeholder="Pls input quantity" name="quantity" )
          .form-group
            label(for="item-price") Item Price
            input.form-control#item-price(type="number", placeholder="Pls input price" name="price"  )
          .form-group
            label(for="item-image") Item Image
            input.form-control-file#item-image(type="file",  placeholder="Pls input image" name="image" )
          button.btn.btn-pry(style="margin-bottom: 50px;", type="submit" onclick="addItem()" ) Submit
    //  customer orders 
    .table-responsive
      table.table.table-striped
        thead
          tr
            th Order ID
            th Buyer Name
            th Order Date
            th Total Price
            th Status
            th Action
        tbody
          tr
            td 001
            td John Doe
            td 2023-04-06
            td UGX 150.00
            td Pending
            td
              button.btn.btn-pry(type="button", onclick="acceptOrder()") Accept
              button.btn.btn-dag(type="button", onclick="rejectOrder()") Reject
              select.form-select(aria-label="Default select example", onchange="updateOrderStatus()")
                option(selected) Pending
                option(value="Accepted") Accepted
                option(value="Rejected") Rejected
                option(value="Delivered") Delivered
          tr
            td 002
            td Jane Smith
            td 2023-04-05
            td UGX 100.00
            td Accepted
            td
              button.btn.btn-pry.disabled(type="button") Accept
              button.btn.btn-dag.disabled(type="button") Reject
              select.form-select(aria-label="Default select example", onchange="updateOrderStatus()")
                option(value="Pending") Pending
                option(selected) Accepted
                option(value="Rejected") Rejected
                option(value="Delivered") Delivered
